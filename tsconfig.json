{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@utils/*": ["src/utils/*"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@hooks/*": ["src/hooks/*"],
			"@states/*": ["src/states/*"],
			"@examples/*": ["src/examples/*"],
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react",
	},
}
